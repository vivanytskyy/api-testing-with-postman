		{
			"name": "List of books",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", () => {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"const jsonData = pm.response.json();\r",
							"const availableBooks = jsonData.filter((book) => book.available === true);\r",
							"const book = availableBooks[0];\r",
							"if(book){\r",
							"    pm.environment.set(\"bookId\", book.id);\r",
							"}\r",
							"pm.test(\"Book found\", () =>{\r",
							"    pm.expect(book).to.be.an('object');\r",
							"    pm.expect(book.available).to.eql(true);\r",
							"})\r",
							"\r",
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/books",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"books"
					],
					"query": [
						{
							"key": "type",
							"value": "non-fiction",
							"disabled": true
						},
						{
							"key": "limit",
							"value": "20",
							"disabled": true
						}
					]
				}
			},
			"response": []
		},
